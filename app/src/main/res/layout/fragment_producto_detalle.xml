<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="40dp"
    android:paddingHorizontal="30dp">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Toolbar
            android:id="@+id/tbProductDets"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_45" >
        </Toolbar>
    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/margin_40"
        android:background="@color/white">

        <ImageView
            android:id="@+id/imagenProductoDetail"
            android:layout_width="294dp"
            android:layout_height="174dp"
            android:src="@drawable/producto"
            android:layout_marginTop="@dimen/margin_20"
            android:layout_gravity="center"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_vendedor3"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_10"
                android:layout_marginHorizontal="@dimen/margin_20"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/informacion_producto"
                    android:textColor="@color/gray"
                    android:textSize="15sp"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/id_productoDetails"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/tiny_padding"
                    android:text="1"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:textColor="@color/gray"
                    />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_marginHorizontal="@dimen/margin_20"
                android:layout_height="1dp"
                android:background="@color/gray"
                android:layout_marginTop="@dimen/margin_10"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:layout_marginBottom="@dimen/margin_20"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/gray"
                    android:text="@string/nombre_del_producto"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/nombreProductoDetail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="@dimen/margin_10"
                    android:layout_marginStart="@dimen/margin_10"
                    android:text="@string/nombre_producto"
                    android:textSize="15sp"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tipo"
                    android:textColor="@color/gray"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/tipoProductoDetail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="@dimen/margin_10"
                    android:layout_marginStart="@dimen/margin_10"
                    android:text="@string/tipo_producto"
                    android:textSize="15sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/precio"
                    android:textColor="@color/gray"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/precioProductoDetail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="@dimen/margin_10"
                    android:layout_marginStart="@dimen/margin_10"
                    android:text="@string/precio_producto"
                    android:textSize="15sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/cantidad_disponible_dos_puntos"
                    android:textColor="@color/gray"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/cantidadDisponibleDetails"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="@dimen/margin_10"
                    android:layout_marginLeft="@dimen/margin_10"
                    android:text="@string/cantidad_disponible"
                    android:textSize="15sp"/>
            </LinearLayout>
        </LinearLayout>
        </LinearLayout>


</FrameLayout>