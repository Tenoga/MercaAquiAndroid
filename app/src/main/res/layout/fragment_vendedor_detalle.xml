<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/shape_vendedor"
        android:layout_marginVertical="@dimen/margin_10"
        android:layout_marginHorizontal="@dimen/margin_20"
        android:padding="@dimen/padding_items">
            <ImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/ic_baseline_person_24"
                android:layout_marginTop="@dimen/margin_20"
                android:layout_gravity="center"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin_10"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/nombreVendedor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="@string/nombre_vendedor"
                android:textSize="15sp"/>
            <TextView
                android:id="@+id/apellidoVendedor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:paddingLeft="@dimen/tiny_padding"
                android:text="@string/apellido_vendedor"
                android:textSize="15sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_10"
            android:layout_gravity="center">
                <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Vendedor"/>
        </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Correo: "
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/correoVendedor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/correo_vendedor"
                android:textSize="15sp"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Celular: "
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/celularVendedor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/telefono_vendedor"
                android:textSize="15sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fecha de Nacimiento: "
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/nacimientoVendedor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/fecha_venta"
                android:textSize="15sp"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>