<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/shape_vendedor"
        android:layout_marginVertical="@dimen/margin_10"
        android:layout_marginHorizontal="@dimen/margin_20"
        android:padding="@dimen/padding_items"
        >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="0.6"
            android:paddingStart="@dimen/margin_10">
            <ImageView
                android:id="@+id/imagenVendedor"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_baseline_person_24"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="2"
            android:layout_marginStart="15dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/nombreVendedor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/nombre_vendedor"
                    android:textStyle="bold"
                    android:textSize="15sp"/>
                <TextView
                    android:id="@+id/apellidoVendedor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/tiny_padding"
                    android:text="@string/apellido_vendedor"
                    android:textStyle="bold"
                    android:textSize="15sp"/>
            </LinearLayout>
            <TextView
                android:id="@+id/emailVendedor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/correo_vendedor"
                android:textSize="13sp"
                android:layout_marginTop="7dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:text="Detalle"
                android:textSize="10sp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/margin_10"
                app:cardCornerRadius="10dp"/>
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>